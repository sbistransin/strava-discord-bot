{
  "name": "strava-discord-bot",
  "version": "1.0.0",
  "description": "Serverless Discord bot for Strava activities",
  "main": "index.js",
  "scripts": {
    "register-commands": "node src/services/discord/install-global-commands.js",
    "check-types": "tsc -p tsconfig.json --noEmit",
    "start": "node dist/index.js",
    "dev": "tsc -p tsconfig.json --watch & node dist/index.js",
    "watch": "tsc -p tsconfig.json --watch",
    "build": "tsc -p tsconfig.json"
  },
  "dependencies": {
    "@vercel/kv": "^3.0.0",
    "discord-interactions": "^4.4.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.6",
    "nodemon": "^3.0.2",
    "typescript": "^5.9.3"
  }
}
